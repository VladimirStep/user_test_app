<header>
  <nav class="navbar navbar-default">
    <div class="container">
      <div class="navbar-header">
        <%= link_to 'MY APP', root_path, class: 'navbar-brand' %>
      </div>
      <ul class="nav navbar-nav navbar-right">
        <% if @user %>
          <li>
            <div class="user-header-icon" style="background-image: url(<%= @user[:avatar_url] %>)"></div>
          </li>
          <li><p class="navbar-text"><%= @user[:name] %></p></li>
          <li><%= link_to 'Logout', logout_path %></li>
        <% else %>
          <li><%= link_to 'Login', login_path %></li>
        <% end %>
      </ul>
    </div>
  </nav>
</header>
<section>
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-md-8 col-md-offset-2">
        <% flash.each do |key, message| %>
          <div class="alert alert-<%= key.to_s %>" role="alert">
            <%= message %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>